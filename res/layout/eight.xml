<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/eight"
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/eightQ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/eight_question"
        android:textSize="18sp"
        android:background="#0066FF"
        android:layout_margin="10dp"/>
    
    
    <TextView
        android:id="@+id/eightA"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_height"
        android:text="@string/eight_A"
        android:layout_margin="10dp"
        android:background="#661196EE"
        android:gravity="center"/>
        
    <TextView
        android:id="@+id/eightB"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_height"
        android:text="@string/eight_B"
        android:layout_margin="10dp"
        android:background="#662BB3D5"
        android:gravity="center"/>
        
    <TextView
        android:id="@+id/eightC"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_height"
        android:text="@string/eight_C"
        android:layout_margin="10dp"
        android:background="#6622DDDD"
        android:gravity="center"/>
        

</LinearLayout>
